{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/lyeetong/FIT3179-Assignment-2/main/deaths_by_countries_regions_years.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Alcohol use": "number",
        "Drug use": "number",
        "Diet low in fruits": "number",
        "Diet low in vegetables": "number",
        "Unsafe sex": "number",
        "Low physical activity": "number",
        "Smoking": "number",
        "Diet high in sodium": "number",
        "Diet low in whole grains": "number",
        "Diet low in nuts and seeds": "number"
      }
    }
  },
  "width": 600,
  "height": 300,
  "transform": [
    {"filter": "datum['Diet high in sodium']"},
    {"window": [{"op": "count", "as": "index"}]},
    {
      "fold": [
        "Diet high in sodium",
        "Diet low in vegetables",
        "Diet low in fruits",
        "Diet low in whole grains",
        "Diet low in nuts and seeds"
      ]
    },
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max-datum.min)",
      "as": "norm_val"
    },
    {"calculate": "(datum.min + datum.max) / 2", "as": "mid"}
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "#ccc"},
      "encoding": {"detail": {"aggregate": "count"}, "x": {"field": "key"}}
    },
    {
      "mark": "line",
      "encoding": {
        "color": {"type": "nominal", "field": "Region"},
        "detail": {"type": "nominal", "field": "index"},
        "opacity": {"value": 0.3},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [
          {"type": "quantitative", "field": "Diet high in sodium"},
          {"type": "quantitative", "field": "Diet low in vegetables"},
          {"type": "quantitative", "field": "Diet low in fruits"},
          {"type": "quantitative", "field": "Diet low in whole grains"},
          {"type": "quantitative", "field": "Diet low in nuts and seeds"}
        ]
      }
    },
    {
      "encoding": {"x": {"type": "nominal", "field": "key"}, "y": {"value": 0}},
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max", "format": ".2f"}
          }
        },
        {"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}}
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 150}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "mid", "format": ".2f"}
          }
        },
        {"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}}
      ]
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key"},
        "y": {"value": 300}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label"},
          "encoding": {
            "text": {"aggregate": "min", "field": "min", "format": ".2f"}
          }
        },
        {"mark": {"type": "tick", "style": "tick", "size": 8, "color": "#ccc"}}
      ]
    }
  ],
  "config": {
    "axisX": {
      "domain": false,
      "labelAngle": 0,
      "tickColor": "#ccc",
      "title": null
    },
    "view": {"stroke": null},
    "style": {
      "label": {"baseline": "middle", "align": "right", "dx": -5},
      "tick": {"orient": "horizontal"}
    }
  }
}