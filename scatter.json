{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background":"black",
  "description": "An interactive scatter plot of global health statistics by country and year.",
  "data": {
    "url": "https://raw.githubusercontent.com/lyeetong/FIT3179-Assignment-2/main/deaths_by_factors.csv",
    "format": {
      "parse": {
        "Physical Practices Deaths": "number",
        "Diet Practices Deaths": "number",
        "Year": "number"
      }
    }
  },
  "width": "container",
  "height": 400,
  "layer": [
    {
      "transform": [
        {"filter": {"field": "Country", "equal": "Afghanistan"}},
        {"filter": {"param": "Year"}}
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 250,
        "y": 180,
        "opacity": 0.25,
        "color": "white"
      },
      "encoding": {"text": {"field": "Year"}}
    },
    {
      "transform": [
        {
          "lookup": "Region",
          "from": {
            "key": "id",
            "fields": ["name"],
            "data": {
              "values": [
                {"id": "Asia", "name": "Asia"},
                {"id": "Europe", "name": "Europe"},
                {"id": "Sub-Saharan Africa", "name": "Sub-Saharan Africa"},
                {"id": "North America", "name": "North America"},
                {"id": "Oceania", "name": "Oceania"},
                {
                  "id": "Latin America and Carribean",
                  "name": "Latin America and Carribean"
                }
              ]
            }
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Physical Practices Deaths",
          "type": "quantitative",
          "scale": {"domain": [30, 3300000]},
          "axis": {"tickCount": 5, "title": "Physical Practices Deaths", "titleColor": "white", "labelColor": "white"}
        },
        "y": {
          "field": "Diet Practices Deaths",
          "type": "quantitative",
          "scale": {"domain": [30, 4000000]},
          "axis": {"tickCount": 5, "title": "Diet Practices Deaths", "titleColor": "white", "labelColor": "white"}
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round"
          },
          "encoding": {
            "detail": {"field": "Country"},
            "order": {"field": "Year"},
            "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {"scheme": "category20"},
      "legend": {"orient": "right", "padding": 20, "titleColor": "white", "labelColor": "white"}},
            "opacity": {
              "condition": {
                "test": {
                  "or": [
                    {"param": "hovered", "empty": false},
                    {"param": "clicked", "empty": false}
                  ]
                },
                "value": 0.8
              },
              "value": 0
            }
          }
        },
        {
          "params": [
            {"name": "grid", "select": "interval", "bind": "scales"},
            {
              "name": "Year",
              "value": [{"Year": 2015}],
              "select": {"type": "point", "fields": ["Year"]},
              "bind": {
                "name": "Year",
                "input": "range",
                "min": 2010,
                "max": 2017,
                "step": 1
              }
            },
            {
              "name": "hovered",
              "select": {
                "type": "point",
                "fields": ["Country"],
                "toggle": false,
                "on": "mouseover"
              }
            },
            {
              "name": "clicked",
              "select": {"type": "point", "fields": ["Country"]}
            }
          ],
          "transform": [{"filter": {"param": "Year"}}],
          "mark": {"type": "circle", "size": 100, "opacity": 0.9, "tooltip": true},
          "encoding": {"tooltip": [
      {"field": "Region", "type": "nominal"},
      {"field": "Physical Practices Deaths", "type": "quantitative", "format": ".2f"}, {"field": "Diet Practices Deaths", "type": "quantitative", "format": ".2f"}
    ], "color": {"field": "name", "title": "Region"}}
        },
        {
          "transform": [
            {
              "filter": {
                "and": [
                  {"param": "Year"},
                  {
                    "or": [
                      {"param": "clicked", "empty": false},
                      {"param": "hovered", "empty": false}
                    ]
                  }
                ]
              }
            }
          ],
          "mark": {
            "type": "text",
            "yOffset": -12,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "text": {"field": "Country"},
            "color": {"field": "name", "title": "Region"}
          }
        },
        {
          "transform": [
            {"filter": {"param": "hovered", "empty": false}},
            {"filter": {"not": {"param": "Year"}}}
          ],
          "layer": [
            {
              "mark": {
                "type": "text",
                "yOffset": -12,
                "fontSize": 12,
                "color": "floralwhite"
              },
              "encoding": {"text": {"field": "Year"}}
            },
            {"mark": {"type": "circle", "color": "white"}}
          ]
        }
      ]
    }
  ],
  "config": {}
}
